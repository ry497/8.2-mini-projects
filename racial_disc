   "source": [
    "\n",
    "#Null hypothesis is : there's no difference of number of calls between two races\n",
    "#Alternate hypothesis : there is a difference of number of calls between two races\n",
    "#Use two-sample test"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 64,
   "metadata": {},
   "outputs": [
    {
     "data": {
      "text/plain": [
       "0.015255284385449893"
      ]
     },
     "execution_count": 64,
     "metadata": {},
     "output_type": "execute_result"
    }
   ],
   "source": [
    "#Compute margin of error\n",
    "df_w_mean=df_w.mean()\n",
    "df_b_mean=df_b.mean()\n",
    "diff_mean=df_w_mean - df_b_mean\n",
    "#take 95% confidece interval\n",
    "margin_of_error=1.96*np.sqrt(np.std(df_w) ** 2 / len(df_w) + np.std(df_b) ** 2 / len(df_b))\n",
    "margin_of_error"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 66,
   "metadata": {},
   "outputs": [
    {
     "data": {
      "text/plain": [
       "[0.016777570469610682, 0.047288139240510473]"
      ]
     },
     "execution_count": 66,
     "metadata": {},
     "output_type": "execute_result"
    }
   ],
   "source": [
    "#Confidence interval\n",
    "confidence_interval = [diff_mean - margin_of_error, diff_mean + margin_of_error]\n",
    "confidence_interval"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 70,
   "metadata": {},
   "outputs": [
    {
     "data": {
      "text/plain": [
       "0.00020000000000000001"
      ]
     },
     "execution_count": 70,
     "metadata": {},
     "output_type": "execute_result"
    }
   ],
   "source": [
    "#p-value\n",
    "\n",
    "p_rep = np.empty(10000)\n",
    "\n",
    "for i in range(len(p_rep)):\n",
    "    p_samples = np.random.permutation(np.concatenate((df_w,df_b)))\n",
    "    \n",
    "    w_perm = p_samples[:len(df_w)]\n",
    "    b_perm = p_samples[len(df_w):]\n",
    "    \n",
    "    p_rep[i] = np.abs(np.mean(w_perm) - np.mean(b_perm))\n",
    "\n",
    "p = np.sum(p_rep >= diff_mean) / len(p_rep)\n",
    "\n",
    "p"
   ]
  },
